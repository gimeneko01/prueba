<?xml version="1.0" encoding="utf-8"?>
<!--marginBottom para una separación
padding separación-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilMacota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/separación_vertical"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/imgFotoCVP"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dalmata"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgIcono2CVP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:src="@drawable/icons8_hueso_del_perro_101"/>


            <TextView
                android:id="@+id/tvNumeroCVP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"
                android:text="@string/pnumero"

                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>